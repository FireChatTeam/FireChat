<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FireChat"
             x:Class="FireChat.MainPage">
    <StackLayout>

	<Label Text="Welcome to Xamarin.Forms!" 
           VerticalOptions="Center" 
           HorizontalOptions="Center" />
        
        <Button Text="Ir a Login" VerticalOptions="Center" 
           HorizontalOptions="Center" 
           Clicked="OnButtonClickedLogin"/>

        <Button Text="Ir a Registro" VerticalOptions="Center" 
           HorizontalOptions="Center" 
           Clicked="OnButtonClickedRegistration"/>
        
        <Button Text="Ir al chat!" VerticalOptions="Center" 
           HorizontalOptions="Center" 
           Clicked="OnButtonClicked"/>

        <Button Text="Ir preferencias" VerticalOptions="Center" 
           HorizontalOptions="Center" 
           Clicked="OnButtonClickedPreferencias"/>

        <Button Text="Ir a listar chats" VerticalOptions="Center" 
           HorizontalOptions="Center" 
           Clicked="OnButtonClickedListarChats"/>

    </StackLayout>

</ContentPage>
