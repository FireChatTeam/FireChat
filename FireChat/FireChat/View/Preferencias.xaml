<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FireChat.Preferencias"
             xmlns:controls="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms"
             Padding="20">
    <StackLayout>
    <Label Text="Preferencias" HorizontalTextAlignment="Center" FontSize="Large" />
    <TableView>
        <TableView.Root>
            <TableSection Title="Sonido y Vibración">
                <SwitchCell x:Name="XswitchVibracion" Text="Vibracion" OnChanged="switchVibracionChanged" />
                <SwitchCell x:Name="XswitchSonido" Text="Sonido" OnChanged="switchSonidoChanged" />
            </TableSection>
            <TableSection Title="Notificaciones">
                <SwitchCell x:Name="XswitchNotEmergentes" Text="Notificaciones emergentes" OnChanged="switchNotificacionesEmergentesChanged" />
                <SwitchCell x:Name="XswitchNotPantaInicio" Text="Notificaciones en la pantalla de inicio" OnChanged="switchNotificacionesPantInicioChanged" />
            </TableSection>
        </TableView.Root>
    </TableView>
    </StackLayout>
</ContentPage>