<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FireChat.Preferencias"
             xmlns:controls="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms"
             Padding="20">
    <TableView>
        <TableView.Root>
            <TableSection Title="Sonido y Vibración">
                <SwitchCell Text="Vibracion" />
                <SwitchCell Text="Sonido" On="True" />
            </TableSection>
            <TableSection Title="Notificaciones">
                <SwitchCell Text="Notificaciones emergentes" On="True" />
                <SwitchCell Text="Notificaciones en la pantalla de inicio" />
            </TableSection>
        </TableView.Root>
    </TableView>
   
</ContentPage>