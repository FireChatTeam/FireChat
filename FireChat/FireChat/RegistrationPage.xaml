<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FireChat.RegistrationPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#FFF">
            <Label Text="REGISTRO" 
                       IsVisible="True" 
                       Opacity="0.75"     
                       HorizontalTextAlignment="Center"    
                       TextColor="#FFF"                   
                       BackgroundColor="#000"          
                       FontSize="48"
                       FontAttributes="Bold" />


            <Label Text="Nombre"
                   TextColor="#000"
                   FontSize="24"
                   Margin="16, 16, 0, 0"/>

            <Editor
                x:Name="txtName" 
                Text="Introduce tu nombre aquí"
                TextColor="#000"
                BackgroundColor="#CCC"
                Margin="16, 0, 16, 0"
                Focused="OnNameTouched"
                />

            <Label Text="Correo"
                   TextColor="#000"
                   FontSize="24"
                   Margin="16, 16, 0, 0"/>

            <Editor
                x:Name="txtMail" 
                Text="Introduce tu correo aquí"
                TextColor="#000"
                BackgroundColor="#CCC"
                Margin="16, 0, 16, 0"
                Focused="OnMailTouched"
                />

            <Label Text="Contraseña"
                   TextColor="#000"
                   FontSize="24"
                    Margin="16, 16, 16, 0"/>

            <Editor
                x:Name="txtPassword1" 
                Text="Introduce tu contraseña aquí"
                TextColor="#000"
                BackgroundColor="#CCC"
                Margin="16, 0, 16, 0"
                Focused="OnPasswordTouched1"/>

            <Label Text="Repite contraseña"
                   TextColor="#000"
                   FontSize="24"
                    Margin="16, 16, 16, 0"/>

            <Editor
                x:Name="txtPassword2" 
                Text="Introduce tu contraseña aquí"
                TextColor="#000"
                BackgroundColor="#CCC"
                Margin="16, 0, 16, 0"
                Focused="OnPasswordTouched2"/>

            <Button
                Clicked="OnRegisterTouched"
                Text="Registrar"
                VerticalOptions="FillAndExpand"
                Margin="16, 20, 16, 20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>